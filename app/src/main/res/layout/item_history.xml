<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">
    
    <TextView
        android:id="@+id/tv_tglCatat"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="tanggal"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_history_table_content"/>
    <TextView
        android:id="@+id/tv_nomc"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="nomc"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_history_table_content"/>
    <TextView
        android:id="@+id/tv_jenisTools"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="jenis tools"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_history_table_content"/>
    <TextView
        android:id="@+id/tv_waktuOwa"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="waktu owarimono"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_history_table_content"/>
    <TextView
        android:id="@+id/tv_statusOwa"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="status"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_history_table_content"/>
    <TextView
        android:id="@+id/tv_waktuHatsu"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="waktu hatsumono"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_history_table_content"/>
    <TextView
        android:id="@+id/tv_statusHatsu"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="status"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_history_table_content"/>
    <TextView
        android:id="@+id/tv_jumlahCounter"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="jumlah counter"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_history_table_content"/>
    <TextView
        android:id="@+id/tv_alasan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="alasan"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_history_table_content"/>
    <TextView
        android:id="@+id/tv_pic"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="pic"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_history_table_content"/>
</LinearLayout>