<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStarted">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@drawable/ic_getstarted"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_getStarted_Center"
        android:layout_width="240dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_getstarted_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/txt_getStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="from the worst to the best"
        android:textColor="@color/colorSecondary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ic_getStarted_Center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:padding="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/txt_getStarted">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signIn"
            android:layout_width="122dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:text="SIGN IN"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/bg_btn_secondary"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signUp"
            android:layout_width="122dp"
            android:layout_height="42dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_btn_secondary"
            android:backgroundTint="@color/colorPrimary"
            android:text="SIGNUP"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/ll_buttonLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Copyright:\nRendy Renaldhy"/>

</androidx.constraintlayout.widget.ConstraintLayout>